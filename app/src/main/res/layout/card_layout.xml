<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context="rocks.ecox.dailyprogrammerchallenges.MainActivity"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:padding="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/challengeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Challenge title"/>

            <TextView
                android:id="@+id/challengeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/challengeTitle"
                android:maxLines="5"
                android:paddingBottom="4dp"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tools:text="Challenge description goes here..."/>

            <TextView
                android:id="@+id/challengeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/challengeDescription"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="314"/>

            <ImageButton
                android:id="@+id/favorite_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignLeft="@+id/completed_button"
                android:layout_below="@+id/challengeDescription"
                android:contentDescription="@string/description_favorite_button"
                app:srcCompat="@drawable/heart_empty"
                tools:src="@drawable/heart_empty"/>

            <ImageButton
                android:id="@+id/completed_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignLeft="@+id/share_button"
                android:layout_below="@+id/challengeDescription"
                android:contentDescription="@string/description_completed_button"
                app:srcCompat="@drawable/checkmark_outline"
                tools:src="@drawable/checkmark_outline"/>

            <ImageButton
                android:id="@+id/share_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignLeft="@+id/challengeDifficulty"
                android:layout_below="@+id/challengeDescription"
                android:contentDescription="@string/description_share_button"
                app:srcCompat="@drawable/share"
                tools:src="@drawable/share"/>

            <TextView
                android:id="@+id/challengeDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/challengeDescription"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="Hard"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>